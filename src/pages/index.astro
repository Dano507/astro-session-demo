---
import Layout from '../layouts/Layout.astro';
import Counter from '../components/Counter.svelte';
import Name from '../components/Name.svelte'

// The following line was causing trouble with typescript,
// but we know that "session" exists on locals because our
// middleware will always declare it
//@ts-ignore
let sesData = Astro.locals.session.data
---

<Layout title="Welcome to Astro.">
  <Name name={(sesData.name)} client:load />
  <Counter count={Number(sesData.count)} client:load />
</Layout>

